{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 600,
  "title": "The global population",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/lbam0001/FIT3179/main/Week%209%20Homework/combined_pop_country.csv"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white", "opacity": 0.2}
    },
    {
      "mark": {"type": "square", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size" : {
          "field" : "2020",
          "type": "quantitative",
          "scale": {"range": [10, 2500]}
      },
        "color" : {
          "field" : "Continent",
          "type" : "nominal"
        }
    }
  }
  ]
}