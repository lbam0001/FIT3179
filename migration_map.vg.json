{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Immigrants per 1000 Residents",
    "data": {
      "url": "https://raw.githubusercontent.com/lbam0001/FIT3179/main/datasets/states.topo.geo.json",
      "format": {
            "type": "topojson",
            "feature": "aus_states.geo"
          }
    },
    "transform": [{
        "lookup": "properties.STATE_NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/lbam0001/FIT3179/main/datasets/origin_state_clean.csv"
          },
          "key": "State",
          "fields": ["Total_Imm", "Total_Pop", "Country_Origin"]
        }
      },
      {"calculate": "datum.Total_Imm / datum.Total_Pop * 1000", "as": "immigrants per 1000"}
    ],
    "vconcat": [
        {
            "width": 800,
            "height" : 600,
            "projection": {"type": "mercator"},
            "mark": {
                "type": "geoshape"
                },
              "encoding": {
                "color": {
                  "field": "immigrants per 1000",
                  "type": "quantitative"
                },
                "tooltip": [
                  {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
                  {"field": "immigrants per 1000", "type": "quantitative", "title": "Total immigrants", "format": ".2f"}
                ]
              }
        }
    ]
    
  }
  