{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lbam0001/FIT3179/main/datasets/states.topo.geo.json",
    "format": {
          "type": "topojson",
          "feature": "aus_states.geo"
        }
  },
  "transform": [{
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/lbam0001/FIT3179/main/datasets/cont_origin_long.csv"
        },
        "key": "State",
        "fields": ["Total_imm", "State_Total", "Cont_origin"]
      }
    },
    {"calculate": "datum.Total_imm / datum.State_Total * 1000", "as": "immigrants per 1000"}
  ],
  "params": [
      {
          "name": "state_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "Western Australia",
              "South Australia",
              "Northern Territory",
              "Queensland",
              "New South Wales",
              "Victoria",
              "Tasmania",
              "Australian Capital Territory"
            ],
            "labels":[
              "All",
              "Western Australia",
              "South Australia",
              "Northern Territory",
              "Queensland",
              "New South Wales",
              "Victoria",
              "Tasmania",
              "Australian Capital Territory"
            ],
            "name": "State Selection: "
          }
        }
  ],
  "vconcat": [
      {
        "title" : "Most common destination",
        "width": 800,
        "height" : 600,
        "projection": {"type": "mercator"},
        "mark": {
            "type": "geoshape"
            },
        "encoding": {
            "color": {
              "field": "immigrants per 1000",
              "type": "quantitative"
            },
            "tooltip": [
              {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
              {"field": "immigrants per 1000", "type": "quantitative", "title": "Total immigrants", "format": ".2f"}
            ]
          }
      }
  ]
  
}
